{% extends 'back.html.twig' %}

{% block content %}
    <h1>Posts list</h1>

    


<div class="pull-right"><a class="btn btn-primary" href="{{ path('post_new') }}">Create a new post</a></div>

    

<div class="row">

        
        {% for post in posts %}

        
        <div class="card column">
                          <div class="card-image">
                            <figure class="image is-4by4">
                              <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="Placeholder image">
                            </figure>
                          </div>
                          <div class="card-content">
                            <div class="media">
                              <div class="media-left">
                                <figure class="image is-48x48">
                                  <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                </figure>
                              </div>
                              <div class="media-content">
                                <p class="title is-4">{{post.title}}</p>
                                <p class="subtitle is-6">{{ post.description | slice(0,15) }}...</p>
                              </div>
                            </div>

                            <div class="content">
                             {{ post.body | slice(0,10) }}...<a>@bulmaio</a>.
                              <a href="#">#css</a> <a href="#">#responsive</a>
                              <br>
                              <time datetime="2016-1-1">{{post.datepublish |date("m/d/Y")}}</time>
                            </div>
                          </div>
                        </div>

        {% endfor %}
</div>
      

   
{% endblock %}

{% block breadcrumb %}

<ul class="breadcrumb">
    <li><a href="">Tableau de Bord</a></li>
    <li class="active">Liste</li>
</ul>

{% endblock %}
