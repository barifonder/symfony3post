{% extends 'base.html.twig' %}

{% block content %}
   <section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Symfony 3
      </h1>
      <h2 class="subtitle">
       Symfony is a set of PHP Components, a Web Application framework, a Philosophy, and a Community â€” all working together in harmony.
      </h2>
    </div>
  </div>
</section>
<hr>

<div class="container">
    <div class="columns">
                        {% for post  in posts %}
                            
                              
                        <div class="card column">
                          <div class="card-image">
                            <figure class="image is-4by4">
                              <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="Placeholder image">
                            </figure>
                          </div>
                          <div class="card-content">
                            <div class="media">
                              <div class="media-left">
                                <figure class="image is-48x48">
                                  <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                </figure>
                              </div>
                              <div class="media-content">
                                <p class="title is-4">{{post.title}}</p>
                                <p class="subtitle is-6">{{ post.description | slice(0,15) }}...</p>
                              </div>
                            </div>

                            <div class="content">
                             {{ post.body | slice(0,10) }}...<a>@bulmaio</a>.
                              <a href="#">#css</a> <a href="#">#responsive</a>
                              <br>
                              <time datetime="2016-1-1">{{post.datepublish |date("m/d/Y")}}</time>
                            </div>
                          </div>
                        </div>
            
                {% endfor %}

    </div>
</div>






{% endblock %}

