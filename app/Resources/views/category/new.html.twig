{% extends 'back.html.twig' %}

{% block content %}
    <h3>Nouvelle categorie</h3>
    {{ form_start(form) }}

        <div class="form-group {% if form.libelle.vars.errors | length > 0 %} has-error {% endif %}">           
            {{ form_row(form.libelle, {'required':false,'attr':{'class':'form-control'}}) }}                
        </div>
        <div class="form-group {% if form.slug.vars.errors | length > 0 %} has-error {% endif %}">           
            {{ form_row(form.slug, {'required':false,'attr':{'class':'form-control'}}) }}                
        </div>
        <div class="form-group {% if form.description.vars.errors | length > 0 %} has-error {% endif %}">           
            {{ form_row(form.description, {'required':false,'attr':{'class':'form-control'}}) }}                
        </div>
     <input class="btn btn-success" type="submit" value="Enregistrer" />
      <a class="btn btn-primary" href="{{ path('category_index') }}">Retour</a>


    {{ form_end(form) }}

   
{% endblock %}


{% block breadcrumb %} 
        <ul class="breadcrumb">
            <li><a href="">Tableau de bord  /</a></li>
            <li ><a href="{{ path('category_index') }}">Listes des categories</a>  /</li>
            <li ><a class="active" href="{{ path('category_new') }}">Nouvelle categories</a></li>
        </ul>
{% endblock %} 