{% extends 'back.html.twig' %}



{% block content %}
    <h1>Categories list</h1>
    <div class="pull-right">
         <a class="btn btn-success" href="{{ path('category_new') }}"><i class="fa fa-plus">Nouvelle categorie</i></a>
    </div>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Createat</th>
                <th>Updateat</th>
                <th>Actions</th>
            </tr>

        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td nowrap="nowrap">{{ category.libelle }}</td>
                <td nowrap="nowrap">{{ category.description | slice(0,20) }}...</td>
                <td >{{ category.slug }}</td>
                <td>{% if category.createAt %}{{ category.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if category.updateAt %}{{ category.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    
                            <a class="btn btn-primary" href="{{ path('category_show', { 'id': category.id }) }}"><i class="fa fa-search"></i></a>
                       
                            <a class="btn btn-success" href="{{ path('category_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i></a>
                       
                 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
    {{ knp_pagination_render(categories) }}
    </div>


{% endblock %}


{% block breadcrumb %} 
        <ul class="breadcrumb">
            <li><a href="">Tableau de bord /  </a></li>
            <li class="active">Listes des categories</li>
        </ul>
{% endblock %}